{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/verbatim"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"baseUrl": "src",
		"paths": {
			"#lib/*": ["lib/*"],
			"#root/*": ["*"]
		}
	},
	"include": ["src"]
}
